	  <div class = "comments-container">
	  <% @comments.each do |comment| %>
	  	<% if (comment.article_id == @article.id) %>
		    <div class="row">
		      <div class="col-5 mt-4">
		        <div class="card shadow mb-3 bg-white rounded">
		        	 <div class="card-header font-italic bg-light text-muted">
			          </div>
		          <div class="card-body row pb-0 ">
		          	<div class = "avatar-icon"> </div>
		          	<div class = "comment-content">
			          	<h5> <%=User.find(comment.user_id).username%> </h5>
			            <p> <%= comment.description %> </p>
			        </div>
			        <% if (is_logged_in) && (current_user.id == comment.user_id || current_user.admin?) %>
			        <%= link_to "Delete", comment_path(comment), class: "delete-margin mb-4 btn btn-outline-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %>
			        <%end%>
		          </div>
		          <div class="card-footer bg-light text-muted"></div>
		        </div>
		      </div>
		    </div>
		<%end%>
	
	 <% end %>
	</div>
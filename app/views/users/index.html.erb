  	<h1 class = "text-on-grape text-center mt-4"> Users </h1>
	  <div class="container">
	  <% @users.each do |user| %>
	    <div class="row justify-content-md-center">
	      <div class="col-8 mt-4">
	        <div class="card text-center shadow mb-5 bg-white rounded" style = "border-color: #6c757d;">
	          <div class="card-header font-italic bg-light">
	          	<%=user.username%>
	          </div>
	          <div class="card-body">
	          	<img src="https://cdn.pixabay.com/photo/2016/08/20/05/51/avatar-1606939_1280.png" width = "150px" height= "150px" alt="" class="rounded">
	            <p class="card-text pt-2"><%= pluralize(user.articles.count, "Article") %></p>
	            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
	            <% if (is_logged_in) %>
	            	<% if user == current_user%>
	           			 <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-success" %>
	            	<%end%>
	            	<% if current_user.admin? %>
	            	 	<%=link_to 'Delete Profile', user_path(user), class: "btn btn-outline-success", method: :delete, data:{confirm: "Are you sure?"}%>
	            	<%end%>
	            <%end%>	
	          </div>
	          <div class="card-footer bg-light text-muted">
	            <small class = "text-muted">Joined <%= time_ago_in_words(user.created_at) %> ago</small>
	          </div>
	        </div>
	      </div>
	    </div>
	  <% end %>
	  </div>
	</div> 

	<div id = "page-content">
	<div class = "apple_pagination">
		<%= will_paginate @articles, :container => false  %>
	</div>
</div>
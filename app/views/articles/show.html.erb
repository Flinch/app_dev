	<h1 class = "text-center mt-4"> <%= @article.title %> </h1>
		 <div class="row justify-content-md-center">
			      <div class="col-8 mt-4">
			        <div class="card text-center shadow mb-5 bg-white rounded" style = "border-color: #6c757d;">
			          <div class="card-header font-italic bg-secondary text-white ">
			            by Malik
			          </div>
			          <div class="card-body">
			            <div class="card-text"><%= simple_format(@article.description) %></div>
			            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
			            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
			          </div>
			          <div class="card-footer bg-secondary text-muted">
			            <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
			            edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
			          </div>
			        </div>
			      </div>
			    </div>
			    <p style = "text-align: center"><%=link_to 'Home', articles_path, class: "text-info"%></p>